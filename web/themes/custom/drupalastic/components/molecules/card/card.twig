{{ attach_library('drupalastic/card') }}
<div{{ attributes }}>
  <article class="card__container">
    <div>
      <div class="card__image"><img src="{{ imgSrc }}"></div>

      {% include "@atoms/text/heading/heading-4.twig" with {
          "text": title,
          "extra_classes": ["card__title"],
      } %}

      <div class="card__description text text-black-50">{{ description }}</div>

      <div class="card__links">
        {% include "@atoms/link/link.twig" with {
          "linkText": linkText,
          "linkUrl": linkUrl,
          "extra_classes": ["text-black"],
        } %}
      </div>

    </div>
  </article>
</div>
